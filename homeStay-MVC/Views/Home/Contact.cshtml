        var name = $('#Name').val();
        var email = $('#Sender').val();
        var message = $('#Message').val();

        // var body = $('#body').val();

        var Body = '<h1>Name: ' + name + '</h1><br><h2>Email: ' + email + '</h2><br><h3>Message: ' + message + '</h3><br><br><br><br><br><br><br><br><br>';

        Email.send({
            Host: "smtp.gmail.com",
            Username: "thisispratikkabade@gmail.com",
            Password: "hpsjewrgbaocwdbu",
            To: 'thisispratikkabade@gmail.com',
            From: email,
            Subject: "Contact from " + name,
            Body: Body
        }).then(
            message => {
                //console.log (message);
                if (message == 'OK') {
                    opengit();
                }
                else {
                    console.error(message);
                    alert('There is error at sending message. ')

                }
            }
        );
    }

    function opengit() {
        if (confirm("Thanks!  " + "Visit Github?")) {
            open('https://github.com/pratikkabade');
        } else {
        }
    }
</script>
