@{
    ViewBag.Title = "Contact";
}
<!-- Font Awesome -->
<script src="https://kit.fontawesome.com/c5266611a7.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://app.staticsave.com/root/root.css">
<style>
    .contact {
        justify-content: flex-end;
    }

    /* back body  */
    .wrapper {
        width: 100%;
        padding-top: 50px;
        margin-right: auto;
        margin-left: auto;
    }

    button,
    select {
        outline: none;
        appearance: none;
        -webkit-appearance: none;
    }

    a {
        text-decoration: none;
    }

    p {
        margin: 0;
        padding: 0;
    }

    .field {
        margin-bottom: 20px;
    }

    .form-mid {
        background: #fff;
        box-shadow: 0 1px 10px rgba(7, 95, 177, 0.397);
        border: 1px solid #ccc;
        padding: 60px;
        padding-right: 100px;
        border-radius: 14px;
    }

        .form-mid form input,
        .form-mid form textarea {
            background: var(--accentdim2);
            border: 2px solid var(--accentdim2);
            color: var(--accentdark);
            font-size: 18px;
            font-weight: 500;
            padding: 12px 15px;
            width: 100%;
            border-radius: 14px;
            height: 55px;
        }

        .form-mid form textarea {
            resize: none;
            min-height: 140px;
        }

            .form-mid form input:focus,
            .form-mid form textarea:focus {
                outline: none;
                border: 2px solid var(--accent);
                background: var(--accentdim2);
                box-shadow: var(--shadowsmall);
            }


    /* send button  */
    .btn-contact {
        border: none;
        font-size: 18px;
        font-weight: 800 !important;
        padding: 15px 30px;
        margin: 20px auto 0;
        color: var(--accentdim2);
        background: var(--accent);
        display: inline-block;
        font-weight: 400;
        text-align: center;
        vertical-align: middle;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        border: 1px solid transparent;
        border-radius: 10px;
    }

        .btn-contact:hover {
            cursor: pointer;
            color: white;
            box-shadow: var(--shadowsmall);
            filter: var(--bright);
        }

    .form-mid form input:hover,
    .form-mid form textarea:hover {
        cursor: text;
    }

    button i {
        position: relative;
        left: 2px;
        font-size: 16px;
        transition: var(--transition);
    }

    button:hover i {
        left: 8px;
        cursor: pointer;
    }
</style>


<section class="contact" id="contact">
    <div class="wrapper">
        <div class="contact-form" style="max-width: 450px; margin: 0 auto;">
            <div class="form-mid">
                <h3>Contact us</h3>
                <hr />
                <form action="javascript:sendmail()" method="post">
                    <div class="field">
                        <input type="text" class="form-control" name="Name" id="Name" placeholder="Name" required="">
                    </div>
                    <div class="field">
                        <input type="email" class="form-control" name="Sender" id="Sender" placeholder="Email"
                               required="">
                    </div>
                    <textarea name="Message" class="form-control" id="Message" placeholder="Message"
                              required=""></textarea>
                    <button type="submit" class="btn btn-contact">Send Message <i class="fa fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="https://smtpjs.com/v3/smtp.js"></script>
<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
