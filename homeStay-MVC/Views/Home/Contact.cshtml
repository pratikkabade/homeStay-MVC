}

<link rel="stylesheet" href="https://app.staticsave.com/root/root.css">
<link href="~/Content/Form.css" rel="stylesheet" />


<section id="contact" id="contact">
    <div id="wrapper">
        <div id="contact-form" style="max-width: 450px; margin: 0 auto;">
            <div id="form-mid">
                <h3 style="margin-top: 0px;">Contact us</h3>
                <hr />
                <form action="javascript:sendmail()" method="post">
                    <div id="field">
                        <input type="text" id="form-control" name="Name" id="Name" placeholder="Name" required="">
                    </div>
                    <div id="field">
                        <input type="email" id="form-control" name="Sender" id="Sender" placeholder="Email"
                               required="">
                    </div>
                    <textarea name="Message" id="form-control" id="Message" placeholder="Message"
                              required=""></textarea>
                    <button type="submit" class="btn-contact">Send Message <i id="fa fa-paper-plane"></i></button>
                </form>
            </div>
        </div>
    </div>
</section>

